<resources>

    <style name="LightBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/lightThemesTextColor</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="appBackgroundColor">@color/lightThemesCardViewBackgroundColor</item>
        <item name="toolbarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!-- Base application theme. -->
    <style name="BlueAppTheme" parent="@style/LightBaseTheme">
        <item name="colorPrimary">@color/blueThemeColorPrimary</item>
        <item name="colorPrimaryDark">@color/blueThemeColorPrimaryDark</item>
        <item name="colorAccent">@color/blueThemeColorAccent</item>
        <item name="circleDrawable">@drawable/circle_darkblue</item>
        <item name="rectBackground">@drawable/rect_background_blue</item>
    </style>

    <!-- Pink Theme -->
    <style name="PinkAppTheme" parent="LightBaseTheme">
        <item name="colorPrimary">@color/pinkThemeColorPrimary</item>
        <item name="colorPrimaryDark">@color/pinkThemeColorPrimaryDark</item>
        <item name="colorAccent">@color/pinkThemeColorAccent</item>
        <item name="circleDrawable">@drawable/circle_darkpink</item>
        <item name="rectBackground">@drawable/rect_background_pink</item>
    </style>

    <!-- Green Theme -->
    <style name="GreenAppTheme" parent="LightBaseTheme">
        <item name="colorPrimary">@color/greenThemeColorPrimary</item>
        <item name="colorPrimaryDark">@color/greenThemeColorPrimaryDark</item>
        <item name="colorAccent">@color/greenThemeColorAccent</item>
        <item name="circleDrawable">@drawable/circle_darkgreen</item>
        <item name="rectBackground">@drawable/rect_background_green</item>
    </style>

    <!-- Dark Theme -->
    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/darkThemeColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkThemeColorPrimaryDark</item>
        <item name="colorAccent">@color/darkThemeColorAccent</item>
        <item name="android:textColorPrimary">@color/darkThemesTextColor</item>
        <item name="android:windowBackground">@color/darkThemesBackground</item>
        <item name="appBackgroundColor">@color/darkThemesCardViewBackgroundColor</item>
        <item name="circleDrawable">@drawable/circle_darkdark</item>
        <item name="rectBackground">@drawable/rect_background_dark</item>
        <item name="toolbarPopupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="ImageActivityTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

</resources>
